{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/consent/:id", "destination": "/api/consent/:id" },
    { "source": "/stats/:id",   "destination": "/api/stats/:id"   },
    { "source": "/admin",       "destination": "/api/admin"       },
    { "source": "/:id",         "destination": "/api/:id"         }
  ]
}
